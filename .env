# ============================================
# FLASK APPLICATION
# ============================================
FLASK_ENV=development
FLASK_APP=src/main.py
SECRET_KEY=dev-secret-key-do-not-use-in-production
DEBUG=True

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_WORKERS=4

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL=postgresql://hads_user:hads_password@postgres:5432/hads_dispatch
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_RECYCLE=3600
DB_USER=hads_user
DB_PASSWORD=hads_password
DB_NAME=hads_dispatch
DB_PORT=5432

# ============================================
# REDIS CACHE
# ============================================
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_password
REDIS_PORT=6379
REDIS_CACHE_TTL=3600

# ============================================
# ML MODELS
# ============================================
MODEL_PATH=/app/models
DATA_PATH=./ml/data
MODEL_VERSION=1.0.0
ENABLE_MODEL_AUTO_UPDATE=False
MODEL_AUTO_UPDATE_INTERVAL=604800

# ============================================
# MICROSERVICES URLS
# ============================================
MS_DESPACHO_URL=http://ms-despacho-service:8000
MS_AUTH_URL=http://ms-auth-service:8001
MS_WEBSOCKET_URL=http://ms-websocket-service:8002

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/src/logs/hads-ml-service.log

# ============================================
# CORS SETTINGS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_PORT=5000
APP_WORKERS=4
WORKERS=4

# ============================================
# MONITORING
# ============================================
ENABLE_PROMETHEUS=True
PROMETHEUS_PORT=9090
SENTRY_DSN=

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_CACHING=True
ENABLE_MODEL_VERSIONING=True
ENABLE_AUTO_SCALING=False
